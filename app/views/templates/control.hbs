<div class='spinner'></div>

<div class='bands'>
  <input type='radio' name='band' id='gri' />
  <label for='gri' data-band='gri'>g-r-i</label>

  <input type='radio' name='band' id='u' />
  <label for='u' data-band='u'>u</label>

  <input type='radio' name='band' id='g' />
  <label for='g' data-band='g'>g</label>

  <input type='radio' name='band' id='r' />
  <label for='r' data-band='r'>r</label>

  <input type='radio' name='band' id='i' />
  <label for='i' data-band='i'>i</label>

  <input type='radio' name='band' id='z' />
  <label for='z' data-band='z'>z</label>
</div>

<div class='parameters'>
  <fieldset>
    <legend>Non-linearity Parameters</legend>
    <input type="range" name="alpha" min="0.01" max="1" step="0.01" value="0.03" disabled='disabled'>
    <div class='parameter'>&alpha;: 0.03</div>
    <input type="range" name="Q" min="0.01" max="100" step="0.01" value="1" disabled='disabled'>
    <div class='parameter'>Q: 1</div>
  </fieldset>
  
  <fieldset>
    <legend>Scale Parameters</legend>
    <input type="range" class='scale' name="i" min="0" max="2" step="0.01" value="1">
    <div class='parameter'>R: 1</div>
    <input type="range" class='scale' name="r" min="0" max="2" step="0.01" value="1">
    <div class='parameter'>G: 1</div>
    <input type="range" class='scale' name="g" min="0" max="2" step="0.01" value="1">
    <div class='parameter'>B: 1</div>
  </fieldset>
  
  <fieldset>
    <legend>Color Saturation</legend>
    <input type="range" class='colorsat' name="colorsat" min="0" max="5" step="0.01" value="1">
    <div class='parameter'>Sat: 1</div>
  </fieldset>
</div>